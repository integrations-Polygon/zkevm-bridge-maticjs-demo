{
  "name": "zkevm-bridge-maticjs-demo",
  "version": "1.0.0",
  "description": "simple demo showcase for erc20 token bridging on polygon zkevm brdige using maticjs",
  "main": "index.js",
  "scripts": {
    "clean": "npx hardhat clean",
    "compile": "npx hardhat compile",
    "deployERC20:zkEVM": "npx hardhat --network zkEVM deploy",
    "deployERC20:goerli": "npx hardhat --network goerli deploy",
    "verifyERC20:zkEVM": "npx hardhat --network zkEVM etherscan-verify",
    "verifyERC20:goerli": "npx hardhat --network goerli etherscan-verify"
  },
